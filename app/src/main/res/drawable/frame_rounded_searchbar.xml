<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#0000FF"/> <!-- Blue background -->
            <corners android:radius="30dp"/> <!-- Rounded corners -->
        </shape>
    </item>
    <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
        <shape>
            <solid android:color="#FFFFFF"/> <!-- White background for the inside text -->
            <corners android:radius="30dp"/> <!-- Rounded corners -->
        </shape>
    </item>
</layer-list>